@model IList<ProductOverviewModel>

@using Nop.Web.Models.Catalog;
@if (Model.Count > 0)
{
    <div class="product-grid bestsellers">
        <div class="title">
            <strong>@T("Bestsellers")</strong>
        </div>
        <div class="item-grid">
            <div id="bestsellers-carousel" class="owl-carousel">
                @foreach (var item in Model)
                {
                    <div class="item-box">
                        @Html.Partial("_ProductBox", item)
                    </div>
                }
            </div>
        </div>
    </div>

    <script>
        $('#bestsellers-carousel').owlCarousel({
            loop: false,
            margin: 30,
            nav: true,
            items: 3,
            responsive: {
                0: {
                    items: 1
                }
            	, 480: {
            	    items: 2
            	}
              	, 980: {
              	    items: 3
              	}
            },
            navText: ['<span class="button-prev"></span>', '<span class="button-next"></span>']
        })
    </script>
}